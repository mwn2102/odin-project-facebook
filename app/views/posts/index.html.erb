<%= render 'shared/post_form' %>

<% @posts.each do |post| %>
    <h3>Author: <%=post.user.name %></h3>
    <p><%=post.content %></p> </br>
    <%= render partial: 'shared/comment_form', locals: {post: post} %>
    <% if post.comments.any? %>
        
        <%= render partial: 'shared/comment', collection: post.comments.order('created_at DESC') %>
    <%end%>
<%end%>
    